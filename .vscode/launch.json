    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "url": "http://localhost:5000"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "http://localhost:5000"
        },
        {
            "type": "terminal",
            "request": "launch",
            "name": "Terminal",
            "command": "bash",
            "env": {"PYTHONPATH": "${workspaceFolder}" }
        }
        ]
}